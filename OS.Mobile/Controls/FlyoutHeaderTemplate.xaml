<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="{StaticResource colPrim}"
             x:Class="TheOrganicShop.Mobile.Controls.FlyoutHeaderTemplate" HeightRequest="150">

    <StackLayout Padding="25" BackgroundColor="{StaticResource colPrim}" VerticalOptions="Center">
        <StackLayout HorizontalOptions="Start">
        <Frame
            
        CornerRadius="40"
        BorderColor="#FFC5C5C5"
        BackgroundColor="White"
        HasShadow="False"
        VerticalOptions="Center"
        HorizontalOptions="Center">
            <Image
            Source="Avathar.png"
            HeightRequest="80"
            WidthRequest="80"
            VerticalOptions="Center"
            HorizontalOptions="Start"
            Aspect="AspectFill" />
        </Frame>

        <Label
        x:Name="name"
        
         VerticalOptions="Center"
            
        HorizontalOptions="Center"
        Style="{StaticResource TxtH6Flyout_1}" />
            </StackLayout>

    </StackLayout>

</ContentView>