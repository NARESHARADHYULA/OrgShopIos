<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="{StaticResource colPrim}"
             x:Class="TheOrganicShop.Mobile.Controls.FlyoutHeaderTemplate" HeightRequest="150">

    <StackLayout BackgroundColor="{StaticResource colPrim}">

        <Frame
        CornerRadius="25"
        BorderColor="#FFC5C5C5"
        BackgroundColor="White"
        HasShadow="False"
            VerticalOptions="Center"
        HorizontalOptions="Start">
            <Image
            Source="Avathar.png"
            HeightRequest="50"
            WidthRequest="50"
            VerticalOptions="Center"
            HorizontalOptions="Start"
            Aspect="AspectFill" />
        </Frame>

        <Label
        x:Name="name"
        
             VerticalOptions="Center"
        HorizontalOptions="Start"
        Style="{StaticResource TxtH6Flyout_1}" />

    </StackLayout>

</ContentView>